---
import { Check } from "lucide-react";
import MotionSection from "./ui/motion_section";

const benefits = [
  "Ingresso com acesso à 01 dia de experiência online",
  "6h de conteúdo imersivo no Meet",
  "Grupo de alunas da imersão",
  "Espaço para tirar suas dúvidas",
];

const exclusiveBonuses = [
  {
    title: "✨ Posicionamento de Impacto",
    desc: "Como construir sua presença online e gerar valor com autenticidade.",
  },
  {
    title: "🚀 Carreira Estratégica",
    desc: "Estratégias para se destacar no mercado e crescer com consistência.",
  },
  {
    title: "🎯 Mentoria Personalizada",
    desc: "Direção prática com foco no seu momento atual como dev.",
  },
  {
    title: "🔥 Acesso a Conteúdo Exclusivo",
    desc: "Materiais e exercícios para acelerar sua evolução.",
  }

];
---

<MotionSection client:visible>
  <section class='px-6 py-20'>
    <div class='flex flex-col items-center justify-center gap-16 mx-auto max-w-7xl'>
      <div class='flex flex-col w-full max-w-3xl gap-8 md:flex-row md:items-start md:gap-12'>
        <h2 class='text-center heading-section md:text-left'>
          O que você vai receber:
        </h2>

        <div class='flex flex-col w-full gap-6 p-8 border rounded-lg bg-gradient-to-l from-violet-500 via-violet-700 to-violet-900 border-muted md:w-2/3'>
          <p class='tracking-wide uppercase subheading-section text-zinc-200'>
            Dentro da Caixa Prata Lucrativa:
          </p>

          <div class='border-t border-zinc-400'></div>

          <ul class='flex flex-col gap-4 small-text text-zinc-100'>
            {
              benefits.map((benefit) => (
                <li class='flex items-center gap-3'>
                  <Check className='w-5 h-5 text-zinc-200 shrink-0' />
                  <span>{benefit}</span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div class='flex flex-col w-full gap-8'>
        <h2 class='text-center heading-section'>Bônus Exclusivos</h2>

        <div class='grid gap-6 sm:grid-cols-2 lg:grid-cols-4'>
          {
            exclusiveBonuses.map((card) => (
              <div class='flex flex-col p-6 transition-colors bg-zinc-800 hover:bg-zinc-700 rounded-xl'>
                <h3 class='mb-2 text-xl font-semibold text-purple-400'>
                  {card.title}
                </h3>
                <p class='text-zinc-300 small-text'>{card.desc}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</MotionSection>
