---
import { MotionSection, TicketCard } from '@/components/ui';
---

<MotionSection client:visible>
  <section id='ticket-options' class='px-6 py-20'>
    <div class='flex flex-col items-center justify-center max-w-6xl gap-16 mx-auto text-center'>
      <h2 class='heading-section'>Faça a sua escolha</h2>

      <div class='grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12'>
        <TicketCard
          title='Ingresso Padrão - Dev decidido'
          type='Ao vivo'
          price='R$ 67'
          link='https://chk.eduzz.com/801EZ48AW7'
          variant='default'
          benefits={['Acesso ao vivo à imersão', 'Guia de implementação', 'Grupo exclusivo']}
        />

        <TicketCard
          title='Ingresso VIP - Dev estratégico'
          type='Ao vivo + Gravação + Bônus Exclusivos'
          price='R$ 167'
          link='https://chk.eduzz.com/E0D6D78R91'
          variant='vip'
          badge='Mais vendido ⭐️'
          benefits={[
            'Tudo do ingresso padrão',
            'Possibilidade de ser escolhido para uma mock interview ao vivo comigo',
            'Banco de ferramentas e links exclusivos que uso para minhas decisões de arquitetura',
            'Resumo em PDF para consulta posterior',
            'Gravação do workshop para você assistir quando quiser (60 dias após o workshop)',
          ]}
        />
      </div>
    </div>
  </section>
</MotionSection>


